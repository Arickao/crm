<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.crm.setting.dao.UserDao">

    <select id="login" resultType="org.example.crm.setting.domain.User">
        select * from tbl_user where loginAct = #{loginAct} and loginPwd = #{loginPwd}
    </select>

    <select id="getAllUserIdAndName" resultType="org.example.crm.setting.domain.User">
        select id,name from tbl_user
    </select>

</mapper>
