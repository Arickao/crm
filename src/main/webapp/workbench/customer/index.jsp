<script type="text/javascript">

	$(function(){
		
		//定制字段
		$("#definedColumns > li").click(function(e) {
			//防止下拉菜单消失
	        e.stopPropagation();
	    });

		// 时间插件
		$(".time").datetimepicker({
			minView: "month",
			language:  'zh-CN',
			format: 'yyyy-mm-dd',
			autoclose: true,
			todayBtn: true,
			pickerPosition: "top-left"
		});

		$("#addBtn").click(function () {
			$.ajax({
				url:"workbench/customer/getAllUserIdAndName",
				type:"get",
				dataType:"json",
				success:function (data) {
					var html = "";
					$.each(data,function (i,n) {
						html += "<option value='"+n.id+"'>"+n.name+"</option>";
					});
					$("#create-customerOwner").html(html);


					//取当前登录用户的id 在js使用el表达式，套在字符串中
					var id = "${sessionScope.user.id}";

					//将当前登录的用户，设置为下拉框的默认选项
					$("#create-customerOwner").val(id);

					//操作模态窗口	获取模态窗口的jquery对象 modal方法参数 show，   hide
					$("#createCustomerModal").modal("show");
				}
			});
		});


		pageList(1,2);


		$("#save").click(function () {
			var name = $.trim($("#create-customerName").val());
			if (name == ""){
				alert("必填项目不能为空");
				return false;
			}
			$("#createForm").submit();
		});

	});

	function pageList(pageNo,pageSize) {

		//将全选的复选框清空
		$("#qx").prop("checked",false);


		$.ajax({
			url:"workbench/customer/pageList",
			data:{
				"pageNo":pageNo,
				"pageSize":pageSize,
			},
			type:"get",
			dataType:"json",
			success:function (data) {
				// {"total":num，"dataList":[{市场活动},{}]}
				var html = "";
				$.each(data.dataList,function (i,n) {
					html += '<tr class="active">';
					html += '<td><input type="checkbox" name="xz" value="'+n.id+'"/></td>';
					html += '<td><a style="text-decoration: none; cursor: pointer;" onclick="window.location.href=\'workbench/customer/detail?id='+n.id+'\';">'+n.name+'</a></td>';
					html += '<td>'+n.owner+'</td>';
					html += '<td>'+n.phone+'</td>';
					html += '<td>'+n.website+'</td>';
					html += '</tr>';
				});

				$("#customerTbody").html(html);

				var totalPages = data.total%pageSize==0?data.total/pageSize:Math.ceil(data.total/pageSize);

				// 数据处理完毕，结合分页插件，对前端展现分页信息
				$("#activityPage").bs_pagination({
					currentPage: pageNo, // 页码
					rowsPerPage: pageSize, // 每页显示的记录条数
					maxRowsPerPage: 20, // 每页最多显示的记录条数
					totalPages: totalPages, // 总页数
					totalRows: data.total, // 总记录条数

					visiblePageLinks: 3, // 显示几个卡片

					showGoToPage: true,
					showRowsPerPage: true,
					showRowsInfo: true,
					showRowsDefaultInfo: true,

					onChangePage : function(event, data){
						pageList(data.currentPage , data.rowsPerPage);
					}
				});

			}
		});
	}
	
</script>
